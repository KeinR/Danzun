

function spawn(x, y, vx, vy)
    local e = Entity.new(
        function(self, other)
            print ("nice hit!")
        end,
        entConf,
        [[
            x += dt * m * 10 * vx;
            y += dt * m * 10 * vy;
        ]],
        bvars
    );
    e.x = x
    e.y = y
    e.vx = vx
    e.vy = vy
    e.width = 10
    e.height = 10
    e.autoGC = false
    e:regCircle("enemies")

    e:setScript(Script.new(function(e)
        while true do
            local x = player:getX() - e.x
            local y = player:getY() - e.y
            local mag = math.sqrt(x^2 + y^2)
            x = x / mag
            y = y / mag
            local b = Entity.new(
                function(self, other)
                    print ("nice hit!")
                end,
                conf,
                [[
                    var v[2] := { vx, vy };
                    p := p + v * 10 * dt;
                ]]
            );
            b.x = e.x
            b.y = e.y
            b.vx = x
            b.vy = y
            b.width = 10
            b.height = 10
            b.autoGC = false
            b:regCircle("enemyBullets")

            pause(1);
        end
    end,
    e
    ));
end

spawn(40, 0, -0.5, 1)
spawn(80, 0, 0.5, 1)

pause(50)

