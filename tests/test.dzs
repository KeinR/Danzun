
function wait(sec)
    coroutine.yield(sec)
end

function spawn(x, y, vx, vy)
    game:spawnEntityFull(
        function(other)
            print ("nice hit!")
        end,
        conf,
        [[
            x += dt * m * 10 * vx;
            y += dt * m * 10 * vy;
        ]],
        {
            bvars
        },
        {
            vx = vx,
            vy = vy
        },
        x, y,
        100, 100,
        false
    );
end

spawn(40, 0, -0.5, 1)
